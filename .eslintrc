{
  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb",
  "env": {
    // "browser": true
    // "mocha": true,
    "node": true,
  },
  "rules": {
    "id-length": 0,
    "jsx-quotes": [2, "prefer-single"],
    "no-empty": 0,
    "react/jsx-curly-spacing": [2, "always"],
    "react/react-in-jsx-scope": 0,
    "no-unused-expressions": [2, { allowShortCircuit: true }]
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "__DEV__": true
  }
}
